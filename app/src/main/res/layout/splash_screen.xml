<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen"
    android:orientation="vertical"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/img_logo_background"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_background" />

    <ImageView
        android:id="@+id/img_logo_notebook"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_notebook" />

    <ImageView
        android:id="@+id/img_logo_pencil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@id/img_logo_notebook"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/logo_pencil" />

    <TextView
        android:id="@+id/txt_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/calibrib"
        android:text="Note It Down"
        android:textColor="@color/primaryTextColor"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txt_rohin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/calibri"
        android:text="By Rohin Bhat"
        android:textColor="@color/primaryTextColor"
        android:textSize="25sp" />

</RelativeLayout>